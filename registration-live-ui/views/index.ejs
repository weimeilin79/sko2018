<!doctype html>
<html lang="us">
<head>
	<meta charset="utf-8">
	<title>Registration Dashboard</title>
	<link href="jquery-ui.css" rel="stylesheet">
	<style>
	body{
		font-family: "Trebuchet MS", sans-serif;
		margin: 50px;
	}
	.demoHeaders {
		margin-top: 2em;
	}
	#dialog-link {
		padding: .4em 1em .4em 20px;
		text-decoration: none;
		position: relative;
	}
	#dialog-link span.ui-icon {
		margin: 0 5px 0 0;
		position: absolute;
		left: .2em;
		top: 50%;
		margin-top: -8px;
	}
	#icons {
		margin: 0;
		padding: 0;
	}
	#icons li {
		margin: 2px;
		position: relative;
		padding: 4px 0;
		cursor: pointer;
		float: left;
		list-style: none;
	}
	#icons span.ui-icon {
		float: left;
		margin: 0 4px;
	}
	.fakewindowcontain .ui-widget-overlay {
		position: absolute;
	}
	select {
		width: 200px;
	}
	</style>
	
</head>
<body>

<h1>Integration Registration Realtime Monitor</h1>

<div class="ui-widget">
	<p>This dashboard displace the latest registration feeds</p>
</div>




<!-- Highlight / Error -->
<h2 class="demoHeaders">Registration</h2>
<div class="ui-widget" id="displaydashboard">
</div>
<br>


<script src="external/jquery/jquery.js"></script>
<script src="jquery-ui.js"></script>
<script>
$(document).ready(function() {
			// Hover states on the static widgets
			$( "#dialog-link, #icons li" ).hover(
				function() {
					$( this ).addClass( "ui-state-hover" );
				},
				function() {
					$( this ).removeClass( "ui-state-hover" );
				}
			);

	    
	    var displaydashboard = $('#displaydashboard').get(0);
	    
	    var noticefront = '<div class="ui-state-highlight ui-corner-all" style="margin-top: 20px; padding: 0 .7em;"><p><span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span>';
			var noticeback = '</p></div>';
	    
	    function callAjax() {
				  $.ajax({
				    type: 'GET',
						url: '<%-routeurl%>/skoregistration/sa/status',
				    data: $(this).serialize(),
				    dataType: 'json',
				    success: function (data) {
				    	$('#displaydashboard').empty();

				    	$.each(data, function (index, value) {
				    			console.log(data[index]);
				    			divdisplay=noticefront+'<B>'+data[index].candidatename+'</B> is reserving seat:['+data[index].seatname+'] as row_col: ['+data[index].seatno+']';
							    console.log(divdisplay);
							    $('#displaydashboard').append(divdisplay);  
							});
							
							
				    	interval = setTimeout(callAjax, 5000);   
				    }
				  });
				}
				callAjax();
		});

</script>
</body>
</html>
